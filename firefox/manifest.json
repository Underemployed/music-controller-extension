{
  "manifest_version": 2,
  "name": "Music Controller Pro",
  "version": "1.1",
  "description": "Control music playback across YouTube Music, YouTube and Spotify",
  "permissions": [
    "tabs",
    "storage",
    "*://*.youtube.com/*",
    "*://music.youtube.com/*",
    "*://*.spotify.com/*"
  ],
"browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "64": "icon.ico",
        "128": "icon.ico"
    }
},
  "commands": {
    "toggle-play": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Toggle Play/Pause"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon.ico",
    "48": "icon.ico",
    "128": "icon.ico"
  }
}
